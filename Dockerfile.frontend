FROM node:16.19 AS build

WORKDIR /app

COPY vue/package*.json ./
RUN npm install

# 在复制源代码之前，创建 /vue/.env 文件并设置环境变量
RUN mkdir -p /app/vue
RUN echo "VUE_APP_API_BASE_URL=http://localhost:9091" > /app/vue/.env

COPY vue/ ./
RUN npm run build

# 运行阶段
FROM nginx:alpine

# 将自定义的 Nginx 配置文件复制到 Nginx 容器中
# COPY nginx.conf /etc/nginx/conf.d/default.conf

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
